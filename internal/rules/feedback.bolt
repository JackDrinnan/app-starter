//
// feedback.bolt
//

path /feedback {
  read() { amModerator() || (amAuthed() && demoModeEnabled()) }
  /{feedback} is Feedback;
}


type Feedback {
  user: FinalAuth
  text: FeedbackText
  created: FinalNow
  create() { isMe(this.user) }
}

type FeedbackText extends FinalString {
  validate() { this.length >= 10 && this.length <= 500 }
}
